name: Moxie-Proxy
description: Stand-alone Maven 2 artifact server and artifact proxy
parent: ../build.moxie
artifactId: proxy
modules:
- maxml
- common
mainclass: org.moxie.proxy.Launcher
sourceFolders:
- compile 'src/main/java'
- compile 'src/main/resources'
- test 'src/test/java'
- test 'src/test/resources'
repositories: central, restlet
properties: {
  restlet.version : 2.1.1
  bouncycastle.version : 1.47
}
dependencies:
- compile 'org.bouncycastle:bcprov-jdk15on:${bouncycastle.version}'
- compile 'org.bouncycastle:bcmail-jdk15on:${bouncycastle.version}'
- compile 'org.bouncycastle:bcpkix-jdk15on:${bouncycastle.version}'
- compile 'org.apache.lucene:lucene-core:3.6.1'
- compile 'org.restlet.jse:org.restlet.ext.ssl:${restlet.version}' ^restlet
- compile 'org.restlet.jse:org.restlet.ext.atom:${restlet.version}' ^restlet
- compile 'org.restlet.jse:org.restlet.ext.freemarker:${restlet.version}' ^restlet
- compile 'org.restlet.jse:org.restlet.ext.jetty:${restlet.version}' ^restlet
- compile 'commons-httpclient:commons-httpclient:3.1'
- compile 'com.beust:jcommander:1.17'
- test 'junit'
