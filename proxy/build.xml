<?xml version="1.0" encoding="UTF-8"?>
<project default="main" xmlns:mx="antlib:org.moxie">

	<!-- Moxie tasks -->
	<include>
		<javaresource name="moxie.xml" classpath="${basedir}/../toolkit/target/moxie-0.5.0-SNAPSHOT-all.jar" />
	</include>
	
	<target name="main">
		<mx:init />
		<mx:javac />
		<mx:jar fatjar="true" includeResources="true" >
			<classfilter>
				<exclude name="org.w3c." />
				<exclude name="org.xml." />
				<exclude name="org.zeroturnaround." />
			</classfilter>
			<mainclass name="org.moxie.proxy.Main" />
		</mx:jar>
	</target>
</project>
