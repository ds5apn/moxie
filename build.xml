<?xml version="1.0" encoding="UTF-8"?>
<project default="main" xmlns:mx="antlib:com.maxtk">

	<!-- These are the default Maxilla locations -->
	<property name="maxilla.bin" value="${basedir}/build" />
	<property name="maxilla.bin.classes" value="${maxilla.bin}/classes" />

	<!--
	Declare the Maxilla tasks and Compile all of Maxilla
	-->
	<target name="bootstrap">
		<!-- Clean -->
		<delete dir="${maxilla.bin}" />
		<mkdir dir="${maxilla.bin}" />
		<mkdir dir="${maxilla.bin.classes}" />

		<!-- Bootstrap compile MaxSetup task and core objects -->
		<javac debug="true" destdir="${maxilla.bin.classes}" includeantruntime="true" failonerror="false" verbose="no">
			<src path="${basedir}/src/main/core" />
		</javac>
		
		<!-- Copy Maxilla resources -->
		<copy todir="${maxilla.bin.classes}" overwrite="false">
			<fileset dir="${basedir}/src/main/resources" />
		</copy>

		<!-- Declare mx:init and read configuration -->
		<taskdef classname="com.maxtk.ant.MxInit" name="init" classpath="${maxilla.bin.classes}" loaderref="maxilla.bootstrap" uri="antlib:com.maxtk" />
		<mx:init verbose="false" />

		<!-- Compile all of Maxilla with mx:javac and retrieved dependencies -->
		<taskdef classname="com.maxtk.ant.MxJavac" name="javac" classpath="${maxilla.bin.classes}" loaderref="maxilla.bootstrap" uri="antlib:com.maxtk" />
		<mx:javac />
		
	</target>


	<!--
	Build the Maxilla release
	-->
	<target name="main">

		<!-- Bootstrap Maxilla in a separate task -->
		<antcall target="bootstrap" inheritall="false" inheritrefs="false" />

		<!-- 
		Manually construct the Maxilla bootstrap classpath and define the tasks 
		because we need to load the tasks using the same classloader in order
		to share objects.  This is handled automatically in production Maxilla jars.
		-->
		<path id="bootstrap.path">
			<pathelement path="${maxilla.bin.classes}" />
		</path>

		<!-- Core -->
		<taskdef classname="com.maxtk.ant.MxInit" name="init" classpathref="bootstrap.path" loaderref="maxilla.bootstrap" uri="antlib:com.maxtk" />
		<taskdef classname="com.maxtk.ant.MxJavac" name="javac" classpathref="bootstrap.path" loaderref="maxilla.bootstrap" uri="antlib:com.maxtk" />
		<taskdef classname="com.maxtk.ant.MxClean" name="clean" classpathref="bootstrap.path" loaderref="maxilla.bootstrap" uri="antlib:com.maxtk" />
		<taskdef classname="com.maxtk.ant.MxInstall" name="install" classpathref="bootstrap.path" loaderref="maxilla.bootstrap" uri="antlib:com.maxtk" />
		<taskdef classname="com.maxtk.ant.MxReport" name="report" classpathref="bootstrap.path" loaderref="maxilla.bootstrap" uri="antlib:com.maxtk" />
		<taskdef classname="com.maxtk.antcontrib.IfTask" name="if" classpathref="bootstrap.path" loaderref="maxilla.bootstrap" uri="antlib:com.maxtk" />

		<!-- Pro -->
		<taskdef classname="com.maxtk.ant.MxJar" name="jar" classpathref="bootstrap.path" loaderref="maxilla.bootstrap" uri="antlib:com.maxtk" />
		<taskdef classname="com.maxtk.ant.MxZip" name="zip" classpathref="bootstrap.path" loaderref="maxilla.bootstrap" uri="antlib:com.maxtk" />
		
		<!-- All -->
		<taskdef classname="com.maxtk.ant.MxExtract" name="extract" classpathref="bootstrap.path" loaderref="maxilla.bootstrap" uri="antlib:com.maxtk" />
		<taskdef classname="com.maxtk.ant.MxGitId" name="gitid" classpathref="bootstrap.path" loaderref="maxilla.bootstrap" uri="antlib:com.maxtk" />
		<taskdef classname="com.maxtk.ant.MxGhPages" name="ghpages" classpathref="bootstrap.path" loaderref="maxilla.bootstrap" uri="antlib:com.maxtk" />
		<taskdef classname="com.maxtk.ant.MxDoc" name="doc" classpathref="bootstrap.path" loaderref="maxilla.bootstrap" uri="antlib:com.maxtk" />

		<!-- Prepare the project -->
		<mx:init />
		
		<mx:gitid verbose="true" />
				
		<!-- Delete the target folder -->
		<delete dir="${mxp.targetFolder}" />
		
		<mx:report />

		<!-- Maxilla-Core -->
		<mx:jar classifier="core">
			<classfilter>
				<exclude name="org.apache." />
				<exclude name="org.eclipse." />
				<exclude name="org.w3c." />
			</classfilter>
			<class name="com.maxtk.ant.MxInit" />
			<class name="com.maxtk.ant.MxClean" />
			<class name="com.maxtk.ant.MxJavac" />
			<class name="com.maxtk.ant.MxInstall" />
			<class name="com.maxtk.ant.MxReport" />
			<class name="com.maxtk.antcontrib.IfTask" />
			<class name="com.maxtk.cobertura.ReportTask" />
			
			<resource file="${basedir}/src/main/resources/maxilla.xml" />
			<resource file="${basedir}/src/main/config/core/tasks.properties" />
		</mx:jar>
		
		
		<!-- Maxilla-Pro -->
		<mx:jar classifier="pro">
			<classfilter>
				<exclude name="org.apache." />
				<exclude name="org.eclipse." />
				<exclude name="org.w3c." />
			</classfilter>
				
			<class name="com.maxtk.ant.MxInit" />
			<class name="com.maxtk.ant.MxClean" />
			<class name="com.maxtk.ant.MxJavac" />
			<class name="com.maxtk.ant.MxInstall" />
			<class name="com.maxtk.ant.MxReport" />
			<class name="com.maxtk.antcontrib.IfTask" />
			<class name="com.maxtk.cobertura.ReportTask" />
			
			<class name="com.maxtk.ant.MxJar" />
			<class name="com.maxtk.ant.MxZip" />

			<resource file="${basedir}/src/main/resources/maxilla.xml" />
			<resource file="${basedir}/src/main/config/pro/tasks.properties" />
		</mx:jar>

		
		<!-- Maxilla-All -->
		<mx:jar classifier="all" includeresources="true">
			<classfilter>
				<exclude name="org.apache." />
				<exclude name="org.eclipse." />
				<exclude name="org.tautua." />
				<exclude name="org.w3c." />				
			</classfilter>
			<class name="com.maxtk.ant.MxInit" />
			<class name="com.maxtk.ant.MxClean" />
			<class name="com.maxtk.ant.MxJavac" />
			<class name="com.maxtk.ant.MxInstall" />
			<class name="com.maxtk.ant.MxReport" />
			<class name="com.maxtk.antcontrib.IfTask" />
			<class name="com.maxtk.cobertura.ReportTask" />
				
			<class name="com.maxtk.ant.MxJar" />
			<class name="com.maxtk.ant.MxZip" />
				
			<class name="com.maxtk.ant.MxKeys" />
			<class name="com.maxtk.ant.MxExtract" />
			<class name="com.maxtk.ant.MxGitId" />
			<class name="com.maxtk.ant.MxGhPages" />				
			<class name="com.maxtk.ant.MxDoc" />
			
			<resource file="${basedir}/src/main/resources/maxilla.xml" />
			<resource file="${basedir}/src/main/config/all/tasks.properties" />

		</mx:jar>

		<!-- Maxml -->
		<mx:jar destfile="${mxp.targetFolder}/maxml-${mxp.version}.jar">
			<class name="com.maxtk.maxml.Maxml" />
		</mx:jar>

		<jar destfile="${mxp.targetFolder}/maxml-${mxp.version}-sources.jar">
			<fileset dir="${basedir}/src/main/core/com/maxtk/maxml" />
		</jar>
		
		<!-- Install the build to our Maxilla cache -->
		<mx:install />

		<!-- Build the site documentation -->
		<mx:doc googlePlusOne="true" injectPrettify="true">
			<structure>
				<page name="overview" src="index.mkd" />
				<menu name="tasks">
					<page name="mx:Setup" src="mxsetup.mkd" />
					<page name="mx:Extract" src="mxextract.mkd" />
					<divider />
					<page name="mx:GitId" src="mxgitid.mkd" />
					<page name="mx:GhPages" src="mxghpages.mkd" />					
					<page name="mx:Jar" src="mxjar.mkd" />
					<divider />
					<page name="mx:Doc" src="mxdoc.mkd" />
				</menu>
				<page name="maxml" src="maxml.mkd" sidebar="true" />
				<page name="design" src="design.mkd" />
				<page name="releases" src="releases.mkd" />
				<menu name="download">
					<link name="maxilla-core" src="maxilla-core.jar" />
					<link name="maxilla-pro" src="maxilla-pro.jar" />
					<link name="maxilla-all" src="maxilla-all.jar" />
					<divider />
					<link name="maxml" src="maxml.jar" />
					<link name="maxml-sources" src="maxml-sources.jar" />
				</menu>
				<link name="GitHub" src="http://github.com/gitblit/maxilla" />
				<divider />
			</structure>
			<substitute token="%VERSION%" value="${mxp.version}" />
			<nomarkdown startToken="%BEGINMAXML%" endToken="%ENDMAXML%" prettify="true" lang="lang-yaml" />
			<nomarkdown startToken="%BEGINXML%" endToken="%ENDXML%" prettify="true" lang="lang-xml" />
			<regex searchPattern="\b(issue)(\s*[#]?|-){0,1}(\d+)\b" replacePattern="&lt;a href='http://code.google.com/p/gitblit/issues/detail?id=$3'&gt;issue $3&lt;/a&gt;" />
			<resource>
				<fileset dir="${mxp.targetFolder}/" includes="*.jar" />
			</resource>
		</mx:doc>
	</target>

	<!--
	Build the Maxilla gh-pages branch
	-->
	<target name="ghpages" depends="main">
		<mx:ghpages sourceFolder="${mxp.targetFolder}/site" obliterate="true" />
	</target>
</project>